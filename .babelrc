{
  "presets": [ //a preset is a set of plugins used to support particular language features
    "@babel/preset-env", //smart preset that allows you to use the latest JavaScript without needing to micromanage which syntax transforms
    "@babel/preset-react"
  ],
  "plugins": [
    "@babel/plugin-proposal-class-properties",
    [
      "babel-plugin-root-import", // plugin to add the opportunity to use import and require with root based paths.
      {
        "rootPathSuffix": "src"
      }
    ]
  ]
}